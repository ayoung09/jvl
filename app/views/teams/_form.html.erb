<%= simple_form_for(@team, :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :logo %>
    <%= f.input :website %>
    <%= f.input :home_stadium %>
    <%= f.input :stadium_capacity %>
    <%= f.input :founding_year %>
    <%= f.input :uuid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
